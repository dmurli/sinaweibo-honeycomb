<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:minWidth="200dp"
  android:orientation="vertical">
    <ImageView android:id="@+id/imgSnapshotA" android:layout_height="400dp" android:layout_width="wrap_content" android:src="@drawable/icon" android:layout_gravity="center_horizontal"></ImageView>
    <EditText android:layout_height="100dp" android:text="Input your comment..." android:gravity="top" android:layout_width="match_parent" android:id="@+id/editText1"></EditText>
    <Button android:id="@+id/btnOK" android:layout_height="wrap_content" android:text="OK" android:layout_width="match_parent"></Button>
</LinearLayout>
