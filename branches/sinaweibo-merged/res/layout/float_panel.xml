<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="horizontal"
  android:background="#00000000">
    <fragment
        android:name="com.lenovo.dll.SinaWeibo.MainFragment"
        android:alpha="0"
        android:layout_width="350dp"
        android:layout_height="750dp"
        android:layout_gravity="right"
        android:visibility="gone"
        android:id="@+id/main_fragment">
    </fragment>
    <fragment
        android:name="com.lenovo.dll.SinaWeibo.WeiboHomePage"
        android:alpha="0"
        android:layout_width="350dp"
        android:layout_height="700dp"
        android:layout_gravity="right"
        android:id="@+id/homepage_fragment">
    </fragment>
    <fragment
        android:name="com.lenovo.dll.SinaWeibo.WeiboAtPage"
        android:alpha="0"
        android:layout_width="350dp"
        android:layout_height="700dp"
        android:layout_gravity="right"
        android:id="@+id/atpage_fragment">
    </fragment>
    <fragment
        android:name="com.lenovo.dll.SinaWeibo.WeiboPostMessage"
        android:alpha="0"
        android:layout_width="350dp"
        android:layout_height="700dp"
        android:layout_gravity="right"
        android:id="@+id/post_fragment">
    </fragment>
    <fragment
        android:name="com.lenovo.dll.SinaWeibo.OAuthFragment"
        android:alpha="0"
        android:layout_width="300dp"
        android:layout_height="600dp"
        android:layout_gravity="right"
        android:id="@+id/oauth_fragment">
    </fragment>
</FrameLayout>