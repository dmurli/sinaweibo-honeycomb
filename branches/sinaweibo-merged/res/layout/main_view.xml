<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="bottom" 
	android:orientation="horizontal">
    <ImageView android:id="@+id/imageView1" android:layout_gravity="bottom" android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/main_window_bg"></ImageView>
    <ImageView android:id="@+id/imageView2" android:layout_gravity="top" android:layout_marginTop="10dp" android:layout_marginLeft="10dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/avator"></ImageView>
    <RadioGroup 
    	android:id="@+id/main_radio" 
    	android:orientation="horizontal"
    	android:layout_gravity="bottom" 
    	android:layout_marginBottom="18dp"
    	android:layout_marginLeft="30dp"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content">
        <RadioButton android:id="@+id/radioHomepage"  android:drawableTop="@drawable/homepage_icon" style="@style/main_tab_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <RadioButton android:id="@+id/radioAtPage" android:drawableTop="@drawable/privatemessage_icon" style="@style/main_tab_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <RadioButton android:id="@+id/radioPostMessage" android:drawableTop="@drawable/postmessage_icon" style="@style/main_tab_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </RadioGroup>
</FrameLayout>