<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content"
  android:background="@drawable/main_window_bg">
    <TextView android:layout_weight="1" android:text="Floating Panel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView1" android:textSize="10pt"></TextView>
    <EditText android:id="@+id/editText1" android:layout_width="match_parent" android:text="Say someting to share..." android:textSize="10pt" android:layout_gravity="top" android:layout_height="400px"></EditText>
    <Button android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="right" android:textSize="10pt" android:text="Share"></Button>
</LinearLayout>
