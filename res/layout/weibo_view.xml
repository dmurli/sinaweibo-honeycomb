<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/main_window_bg"
  android:alpha = "0.5"
  android:id="@+id/weibo_view" android:gravity="bottom" android:orientation="vertical">
	<ImageView android:id="@+id/imgSnapshot2" android:layout_width="350dp" android:src="@null" android:layout_gravity="center_horizontal" android:adjustViewBounds="true" android:baselineAlignBottom="true" android:maxHeight="300dp" android:layout_height="wrap_content"></ImageView>
    <EditText android:layout_height="100dp" android:text="Input your comment here..." android:layout_width="match_parent" android:id="@+id/txtComment" android:gravity="top"></EditText>
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="match_parent">
	    <Button android:visibility="gone" android:text="start" android:id="@+id/btnStartVideo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom"></Button>
	    <Button android:visibility="gone" android:text="pause" android:id="@+id/btnPauseVideo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom"></Button>
	    <Button android:visibility="gone" android:text="step" android:id="@+id/btnStepVideo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom"></Button>
	    <Button android:visibility="gone" android:text="resume" android:id="@+id/btnResumeVideo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom"></Button>
	    <Button android:text="capture" android:id="@+id/btnCaptureVideo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom"></Button>
	    <Button android:text="cap1" android:id="@+id/btnCaptureVideo1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom"></Button>
	    <Button android:text="cap2" android:id="@+id/btnCaptureVideo2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom"></Button>
	    <Button android:text="cap3" android:id="@+id/btnCaptureVideo3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom"></Button>
	    <Button android:text="cap bak" android:id="@+id/btnCaptureVideoBak" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom"></Button>
	    <Button android:text="exit" android:id="@+id/btnExit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom"></Button>
    </LinearLayout>
</LinearLayout>
