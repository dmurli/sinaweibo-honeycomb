<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1"
      android:versionName="1.0" package="com.lenovo.dll.SinaWeibo">
     <supports-screens></supports-screens>
    <application android:icon="@drawable/icon" android:label="@string/app_name">
		  <activity android:name=".AndriodExample"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".OAuthActivity">
	        <intent-filter>
		        <action android:name="android.intent.action.VIEW" />
		        <category android:name="android.intent.category.DEFAULT" />
		        <category android:name="android.intent.category.BROWSABLE" />
		        <data android:scheme="weibo4andriod" android:host="OAuthActivity" /> 
			</intent-filter>
        
        </activity>
        
        <activity android:name=".WeiboPrivateMessage" android:label="@string/app_name">
        </activity>
        
        <activity android:name=".WeiboHomePage" android:label="@string/app_name">
        </activity>
        
        <activity android:name=".WeiboAtPage" android:label="@string/app_name">
        </activity>
        
        <activity android:name=".WeiboTabWidget" android:label="@string/app_name">
        </activity>
        
        <activity android:name=".WeiboPostMessage" android:label="@string/app_name">
        </activity>
    </application>
    
    <uses-sdk android:targetSdkVersion="11"/>
<uses-permission android:name="android.permission.INTERNET" /> 
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

</manifest> 